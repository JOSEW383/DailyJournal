<%- include('partials/header'); -%>
<h1>Home</h1>
<p><%=homeStartingContent%></p>
    <%posts.forEach(function(post){%>
        <h2><a href="/post/<%=post._id%>"><%=post.title%></a></h2>
        <%if(post.body.length<=110){%>
            <p><%=post.body%></p>
        <%}else{%>
            <p><%=post.body.substring(0,110)+" ..."%>
                <a href="/post/<%=post._id%>">Read More</a>
            </p>

        <%}%>
    <%});%>
<%- include('partials/footer'); -%>